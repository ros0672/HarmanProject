<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical" android:background="#000000">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteX="-7dp" android:background="#ECE8E8"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <Spinner
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" android:id="@+id/task_selector"
                    android:layout_gravity="center"
                    android:entries="@array/Task" android:layout_marginTop="30dp"
                    android:dropDownSelector="@android:drawable/arrow_down_float"/>
            <TextView
                    android:text="Матрица A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:layout_gravity="center"
                    android:layout_marginTop="50dp"/>
            <EditText
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:id="@+id/res_text"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center" android:background="#C5C4C4" android:textColor="#2B2929"
                    android:textColorHint="#922B2929" android:textAllCaps="false"/>
            <TextView
                    android:text="Матрица B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_gravity="center"
                    android:layout_marginTop="30dp"/>
            <EditText
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/m2_text" android:layout_gravity="center" android:layout_marginTop="20dp"
                    android:textColor="#2B2929" android:textColorHint="#922B2929"
                    android:background="#C5C4C4" android:textAllCaps="false"/>
            <Button
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" android:id="@+id/post_button" android:layout_gravity="center"
                    android:layout_marginTop="75dp" android:text="РЕШИТЬ"
                    style="@style/Widget.AppCompat.Button"
                    android:background="#009688" android:textColor="#FFFFFF"/>
            <TextView
                    android:text="Результат"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_marginTop="75dp"
                    android:layout_gravity="center"/>
            <EditText
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/output_text"
                    android:layout_gravity="center" android:layout_marginTop="20dp" android:layout_marginBottom="50dp"
                    android:textColor="#2B2929" android:textColorHint="#922B2929" android:background="#C5C4C4"
                    android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>